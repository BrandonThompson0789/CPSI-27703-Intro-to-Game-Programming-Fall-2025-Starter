{
  "_comment": "Arrow Keys Layout - Alternative keyboard layout",
  "keyboard": {
    "move_up": ["Up"],
    "move_down": ["Down"],
    "move_left": ["Left"],
    "move_right": ["Right"],
    "action_walk": ["RShift", "RCtrl"],
    "action_interact": ["Enter", "0"],
    "action_throw": ["RAlt", "1"]
